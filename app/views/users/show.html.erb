<%= render 'users/header', user: @user %>

  <div id="notice">
          <% if flash[:notice] %>
            <p> <%= flash[:notice] %> </p>  
          <% end %>
  </div>
  <div id="error_explanation">
    <% if @user.errors %>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li> <%= message %></li>
          <% end %>
        </ul>
    <% end %>
  </div>

<%= render 'users/user_info', {book: @book, user: @user} %>

<div class="container">
  <div class="row">
    <div class='col-xs-9'>
      <h2>Books</h2>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td> <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %> </td>
              <td> <%= link_to  " #{book.title}", book_path(book.id) %> </td>
              <td> <%= book.body %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  