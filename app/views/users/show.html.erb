<div class="container">

  <div class='col-xs-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr>
          
        </tr> 

        <tr>
          <th>name</th>
          <th> <%=@user.name%> </th>
        </tr>

        <tr>
          <th>introduction</th>
          <th> <%=@user.introduction%> </th>
        </tr>
      </table>

    <div class='row'>
      <%# <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_14436" href="/users/14436/edit"></a> %>
    </div>
    <h2>New book</h2>
    <%= form_for(@book) do |f|%>
        <div class="field row">
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>

        <div class="field row">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body %>
        </div>

        <div class="actions row">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
  
  </div>

  <div class='col-xs-9'>
    <h2>Books</h2>

    <table class='table table-hover table-inverse'>
      <thead>
        <tr> 
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td> ユーザー画像 </td>
            <td> <%= link_to  "タイトル", book_path %> </td>
            <td> <%= book.body %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
   