<div class="body">
  <div class="container">
    <div class='col-xs-3'>
    <div id="error_explanation">
      <% if book.errors %>
        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
      <h2>User info</h2>
      <table class='table'>
        <tr>
          
        </tr> 

        <tr>
          <th>name</th>
          <th> <%=user.name%> </th>
        </tr>

        <tr>
          <th>introduction</th>
          <th> <%=user.introduction%> </th>
        </tr>
      </table>
        <div class='row'>
          <%= link_to  "Profile Edit", edit_user_path(user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
        </div>

        <h2>New book</h2>
        <%= form_for(book) do |f| %>
          <div class="field row">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class: "col-xs-12 book_title" %>
          </div>

          <div class="field row">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, class: "col-xs-12 book_body" %>
          </div>

          <div class="actions row">
            <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
          </div>
        <% end %>
    </div>
 
  
    