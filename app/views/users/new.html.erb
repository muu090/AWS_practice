<div class='col-xs-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr>
        <%= f.attachment_field :image %>
      </tr> 

      <tr>
    	  <th>name</th>
    	  <th> <%=@user.name%> </th>
      </tr>

      <tr>
    	  <th>introduction</th>
    	  <th> <%=@user.introduction%> </th>
      </tr>
    </table>

<div class='row'>
  <%# <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_14436" href="/users/14436/edit"></a> %>
 
</div>
  <h2>New book</h2>
  <%= form_for(@book) do |f| %>
    <div class="field row">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="field row">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body %>
    </div>

    <div class="actions row">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>