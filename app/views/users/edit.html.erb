<div class="body">
  <div class='container'>
    <%= render 'users/header', user: @user %>
    
    <h2>User info</h2>
    <div id="error_explanation">
      <% if @user.errors.any? %>
        <h2> error </h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li> <%= message %></li>
            <% end %>
          </ul>
      <% end %>
    </div>

    <%= form_for(@user) do |f| %>
      <div class="field">
        <label for="user_name">Name</label>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <label for="user_image">Image</label>
        <%= f.attachment_field :profile_image %>
      </div>

      <div class="field">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction %>
      </div>

      <div class="actions">
        <%= f.submit 'Update User' %>
      </div>
    <% end %>
  </div>
</div>