<%= render 'users/header', user: @user %>

<%= render 'users/user_info', {book: @book, user: @user} %>

<div class='col-xs-9'>
  <h2> Users</h2>

  <table class='table'>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td> ユーザー画像 </td>
          <td> <%= user.name %> </td>
          <td> <%= link_to  "Show", user_path(user.id) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
        