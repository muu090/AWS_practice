<h2>New book</h2>
  <%= form_for(@book) do |f| %>
    <div class="field row">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="field row">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body %>
    </div>

    <div class="actions row">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>