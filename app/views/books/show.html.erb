<%= render 'books/header', user: @user %>

<%= render 'books/user_info', {book: @book, user: @user} %>

<div class='col-xs-9'>
  <h2>Book detail</h2>

  <table class='table table-hover table-inverse'>
    <tbody>
      <tr>
        <td> ユーザー画像 </td>
        <td> <%= link_to  " #{@book.title} ", book_path(@user.id) %> </td>
        <td> <%= @book.body %> </td>
        <% if @book.user == current_user %>
          <td> <%= link_to  "Edit", edit_book_path(current_user.id), class: "btn-sm btn-success" %> </td>
          <td> <%= link_to  "Destroy", '/books/:id', method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn-sm btn-danger" %> </td>
        <% end %>
      </tr>
    </tbody>
  </table>
      </div>
    </div>
  </div>
 