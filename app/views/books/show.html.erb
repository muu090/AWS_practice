<%= render 'books/header', user: @user %>

<div class="body">
  <div class="container">
    <div class="row">
      <div id="error_explanation">
        <% if @book.errors %>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li> <%= message %></li>
              <% end %>
            </ul>
        <% end %>
      </div>

      <%= render 'books/user_info', {book: @book, user: @user, books: @books} %>

      <div class='col-xs-9'>
        <h2>Book detail</h2>

        <table class='table table-hover table-inverse'>
          <tbody>
              <tr>
                <td> 
                  <%= link_to  user_path(@books.user.id) do %>
                    <%= attachment_image_tag @books.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
                    <%= @books.user.name %>
                  <%end%>
                </td>
                <td> <%= link_to  " #{@books.title} ", book_path(@books.id) %> </td>
                <td> <%= @books.body %> </td>
                <% if @books.user == current_user %>
                  <td> <%= link_to  "Edit", edit_book_path(@books.id), class: "btn-sm btn-success" %> </td>
                  <td> <%= link_to  "Destroy", book_path(@books.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn-sm btn-danger" %> </td>
                <% end %>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
 